---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import MagicButton from '../components/MagicButton.astro';
import BentoGrid from '../components/BentoGrid.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
		<section class="hero fade-in">
			<div class="hero-content">
				<h1 class="slide-up">Welcome to My Blog</h1>
				<p class="slide-up">
					I write about technology, programming, and life experiences. 
					Join me as I share insights and stories from my journey.
				</p>
                                <div class="hero-actions slide-up">
                                        <MagicButton href="/blog" text="Read My Posts" />
                                        <MagicButton href="/about" text="About Me" secondary={true} />
                                </div>
			</div>
		</section>

		<!-- Latest Posts Section -->
		<section class="latest-posts">
			<div class="container">
				<div class="section-header">
					<h2>Recent Posts</h2>
					<p>My latest thoughts and writings</p>
				</div>
				
                                <BentoGrid posts={posts} />
				
                                <div class="section-cta">
                                        <MagicButton href="/blog" text="View All Articles" />
                                </div>
			</div>
		</section>


		<Footer />
	</body>
</html>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
	
	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}
	
	.section-header h2 {
		font-size: clamp(2rem, 4vw, 3rem);
		margin-bottom: 1rem;
		background: linear-gradient(135deg, rgb(var(--black)) 0%, var(--accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.section-header p {
		font-size: 1.125rem;
		color: rgb(var(--gray));
		max-width: 600px;
		margin: 0 auto;
	}
	
	.section-cta {
		text-align: center;
		margin-top: 3rem;
	}
	
	/* Latest Posts Section */
	.latest-posts {
		padding: 6rem 0;
		background: rgba(var(--gray-light), 0.3);
	}
	
	
	/* Animations */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	.fade-in {
		animation: fadeInUp 0.6s ease-out;
	}
	
	.slide-up {
		animation: fadeInUp 0.8s ease-out;
	}
	
	.slide-up:nth-child(2) {
		animation-delay: 0.2s;
		animation-fill-mode: both;
	}
	
	.slide-up:nth-child(3) {
		animation-delay: 0.4s;
		animation-fill-mode: both;
	}
	
	/* Responsive Design */
	@media (max-width: 768px) {
		.hero {
			padding: 3rem 0 4rem;
		}
		
		.latest-posts {
			padding: 4rem 0;
		}
		
		.section-header {
			margin-bottom: 3rem;
		}
		
	}
</style>